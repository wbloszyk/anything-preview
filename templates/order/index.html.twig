{% extends 'base.html.twig' %}

{% block title %}Order index{% endblock %}

{% block body %}
    <h1>Lista zamówień</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Numer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for order in orders %}
            <tr>
                <td>{{ order.id }}</td>
                <td>{{ order.number }}</td>
                <td>
                    <a href="{{ path('app_order_show', {'id': order.id}) }}">pokaż</a>
                    <a href="{{ path('app_order_edit', {'id': order.id}) }}">edytuj</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_order_new') }}">Create new</a>
{% endblock %}
